<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avilagroup.dev.x_rview_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PersonBinding" />
        <activity android:name=".RviewListActivity" />
        <activity android:name=".CviewListActivity" />
        <activity android:name=".RviewAsyncListActivity" />
        <activity android:name=".RviewTwoAsyncListActivity" />
        <activity android:name=".BillsAsyncActivity" />
        <activity
            android:name=".BillsTabActivity"
            android:label="@string/title_activity_bills_tab"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.avilagroup.dev.x_rview_app.MainActivity" />
        </activity>
        <activity android:name=".BillBinding" />
        <activity
            android:name=".notes.NotesActivity"
            android:label="@string/title_activity_notes"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.avilagroup.dev.x_rview_app.MainActivity" />
        </activity>
    </application>

</manifest>