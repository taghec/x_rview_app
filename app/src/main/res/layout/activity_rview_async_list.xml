<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
<RelativeLayout
    android:id="@+id/activity_rview_async_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.avilagroup.dev.x_rview_app.RviewAsyncListActivity"
    android:padding="@dimen/cardview_default_radius">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/rv_rview_list"
        android:scrollbars="vertical" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_person_add_black_24dp"
        android:id="@+id/fabPersonAdd"
        android:layout_alignBottom="@+id/rv_rview_list"
        android:layout_alignEnd="@+id/rv_rview_list"
        android:tint="@color/colorPrimaryDark"
        android:layout_margin="@dimen/default_gap" />
</RelativeLayout>
</layout>