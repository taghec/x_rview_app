<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/activity_bills_async"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.avilagroup.dev.x_rview_app.BillsAsyncActivity">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvBillsAsync"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:scrollbars="vertical"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="auto"
            app:srcCompat="@android:drawable/ic_input_get"
            android:id="@+id/fabBillAdd"
            android:tint="@color/cardview_dark_background"
            android:layout_alignBottom="@+id/rvBillsAsync"
            android:layout_alignEnd="@+id/rvBillsAsync" />

    </RelativeLayout>
</layout>